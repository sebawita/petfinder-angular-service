{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "paths": { "@angular/*": ["../node_modules/@angular/*"] }
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
      "pet-finder.service.ts",
      "offline-pet-finder.service.ts",
      "pet-finder-factory.ts",
      "index.ts",
      "models/index.ts",
      "models/contact.model.ts",
      "models/media.model.ts",
      "models/pet.model.ts",
      "models/raw-pet.model.ts",
      "models/search-options.ts",
      "models/shelter.model.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true
    }
}
